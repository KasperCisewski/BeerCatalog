<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KatalogPiw.Views.OknoDodawaniaGatunku"
             xmlns:ViewModels="using:KatalogPiw.ViewModels">

    <ContentPage.BindingContext>
        <ViewModels:DodawanieGatunkuViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nowy Gatunek" HorizontalOptions="Center"/>
            <Entry x:Name="NazwaGatunku" WidthRequest="150"/>
            <Button x:Name="btn" Clicked="buttonZapiszGatunek_Click" Text="Zapisz Gatunek" FontSize="14" BorderColor="Black" MinimumWidthRequest="25" MinimumHeightRequest="50"/>
            <ListView ItemsSource="Binding Gatunki" HasUnevenRows="True">
                
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>