<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="using:KatalogPiw.Views"
             x:Class="KatalogPiw.Views.OknoDodawaniaPiwa">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout >

            <Label Text="Nazwa Piwa" HorizontalOptions="Start"/>
            <Entry x:Name="NazwaPiwa"/>
            <Picker x:Name="BrowarPicker" Title="Wybierz browar" ItemsSource="{Binding Browary}" SelectedItem="{Binding NazwaBrowaru}" ItemDisplayBinding="{Binding NazwaBrowaru}"  />
            <Label Text="Cena netto bez rabatu" HorizontalOptions="Start"/>
            <Entry x:Name="CenaNettoBR"  />
            <Label Text="Cena netto z rabatem" HorizontalOptions="Start" />
            <Entry x:Name="CenaNettoR"/>
            <Picker x:Name="GatunekPicker" Title="Wybierz gatunek" ItemsSource="{Binding Gatunki}" SelectedItem="{Binding NazwaGatunku}" ItemDisplayBinding="{Binding NazwaGatunku}"  />
            <Label Text="Parametry" HorizontalOptions="Start"/>
            <Entry x:Name="Parametry"  />
            <Label Text="Opis" HorizontalOptions="Start"/>
            <Entry x:Name="Opis"    />
            <Label Text="Food Paring" HorizontalOptions="Start"/>
            <Entry x:Name="FoodParing"  />
            <Button x:Name="btn" Clicked="buttonZapiszPiwo_Click" Text="Submit" FontSize="14" BorderColor="Black" MinimumWidthRequest="20" MinimumHeightRequest="30"/>
            <Button x:Name="RefreshButton" Clicked="buttonRefreshButton_Click" Text="Refresh" FontSize="14" MinimumWidthRequest="20" MinimumHeightRequest="30"/>
            <Button x:Name="PokazListe" Clicked="buttonPokazListe_Click" Text="Pokaz Liste" FontSize="13" MinimumWidthRequest="20" MinimumHeightRequest="30"/>
        </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>